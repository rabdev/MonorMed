<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/upcoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/upcoming_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Teszt Elek"
                android:textAlignment="viewStart"
                android:textColor="@color/colorGrey"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/upcoming_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:text="10:20"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="28dp">

            <TextView
                android:id="@+id/upcoming_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@+id/home_addtest2"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:src="@android:drawable/ic_menu_edit"
                    android:tint="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/home_addtest2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_add_test"
                    android:tint="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/home_kesz2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/home_addtest2"
                    android:src="@drawable/ic_check"
                    android:tint="@color/colorPrimaryDark" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>